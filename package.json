{
  "name": "audiocard",
  "description": "Opinionated, responsive, audio player compatible with Twitter Cards - Server Component version",
  "version": "2.0.0",
  "type": "module",
  "license": "MIT",
  "author": "Erik Rasmussen <rasmussenerik@gmail.com>",
  "repository": "erikras/audiocard",
  "keywords": [
    "audiocard",
    "react",
    "audio",
    "mp3",
    "twitter",
    "card",
    "twitter card",
    "server component",
    "next.js"
  ],
  "main": "./dist/index.js",
  "module": "./dist/audiocard.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/audiocard.esm.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "start": "cp-cli ./index.js ./dist/index.js && cross-env NODE_ENV=development rollup -w -c | tsc -w -p tsconfig.base.json",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production tsc -p tsconfig.base.json  && rollup -c && rimraf compiled && cp-cli ./index.js ./dist/index.js",
    "prepublish": "npm run build",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "precommit": "biome check --write .",
    "storybook": "storybook dev -p 9001",
    "build-storybook": "storybook build",
    "addc": "all-contributors add",
    "deploy-storybook": "storybook-to-ghpages",
    "gen-docs": "all-contributors generate",
    "size": "size-limit"
  },
  "resolutions": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^24.0.5",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "all-contributors-cli": "^6.2.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "biome": "^0.3.3",
    "cp-cli": "^2.0.0",
    "cross-env": "5.2.0",
    "husky": "1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "8.1.5",
    "raw-loader": "^0.5.1",
    "react": "^18.0.0",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-dom": "^18.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.44.1",
    "rollup-plugin-size-snapshot": "^0.8.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "size-limit": "^11.2.0",
    "storybook": "^8.6.14",
    "ts-jest": "^24.0.2",
    "tsc-watch": "^2.1.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,md}": [
      "biome check --write"
    ]
  },
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "3 kB"
    },
    {
      "path": "./dist/audiocard.esm.js",
      "limit": "2 kB"
    },
    {
      "path": "./dist/audiocard.umd.production.js",
      "limit": "2 kB"
    }
  ]
}
